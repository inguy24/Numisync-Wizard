{
  "name": "numisync-wizard",
  "version": "1.0.0",
  "description": "NumiSync Wizard - Enrich your OpenNumismat collection with data from Numista",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect",
    "build": "electron-builder build --win",
    "build:dir": "electron-builder build --win --dir",
    "build:portable": "electron-builder build --win portable",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo 'Tests not yet configured'"
  },
  "build": {
    "extends": null
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/inguy24/numismat-enrichment.git"
  },
  "keywords": [
    "numismatics",
    "coin",
    "collection",
    "opennumismat",
    "numista",
    "electron"
  ],
  "author": "Shane Burkhardt",
  "license": "MIT",
  "dependencies": {
    "@polar-sh/sdk": "^0.42.5",
    "axios": "^1.13.4",
    "electron": "^28.3.3",
    "sql.js": "^1.10.3"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
